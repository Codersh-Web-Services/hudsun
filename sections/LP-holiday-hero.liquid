{% if section.settings.section_background != blank %}
<section class="header-wbg inner-parallax d-flex align-items-center lp-holiday-banner" data-stellar-background-ratio=".5" style="background-image:url('{{ section.settings.section_background | img_url: '' }}');">
{% else %}
<section class="header-wbg">
{% endif %}
  <div class="container">
    <div class="row">
      <div class="col-12">
        {% if section.settings.main_text != blank %}
          <h1>{{ section.settings.main_text }}</h1>
        {% else %}
          <h1>{{page.title}}</h1>
        {% endif %}
        <h2>{{ section.settings.sub_text }}</h2>
      </div>
    </div>
  </div>
</section>


{% if section.settings.overlay_background == true %}
<style type="text/css">
.header-wbg:after {
  content: '';
  background-color: #00000040;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
</style>
{% endif %}

{% schema %}
  {
    "name": "Holiday Landing",
    "settings": [
      {
         "type":      "header",
         "content":   "Hero Section"
      },
      {
        "type": "checkbox",
        "id": "overlay_background",
        "label": "Overlay Background"
      },
      {
        "type": "image_picker",
        "id": "section_background",
        "label": "Section Background"
      },
      {
        "type": "textarea",
        "id": "main_text",
        "label": "Override Heading"
      },
      {
        "type": "textarea",
        "id": "sub_text",
        "label": "Sub Heading"
      }
    ]
  }
{% endschema %}

