{% if section.settings.section_background != blank %}
<section class="header-wbg inner-parallax d-flex align-items-center" data-stellar-background-ratio=".5" style="background-image:url('{{ section.settings.section_background | img_url: '' }}');">
{% else %}
<section class="header-wbg">
   {% endif %}
   <div class="container">
      <div class="row">
         <div class="col-12">
            {% if section.settings.main_text != blank %}
            <h1>{{ section.settings.main_text }}</h1>
            {% else %}
            <h1>{{page.title}}</h1>
            {% endif %}
            <h2>{{ section.settings.sub_text }}</h2>
         </div>
      </div>
   </div>
</section>
<section class="main-section plain-layout visible-hide">
   <div class="container">
      {{ page.content }}
   </div>
   <div class="float-img">
      <img src="https://cdn.shopify.com/s/files/1/0277/0118/2512/files/leaves.png?v=1621262471">
   </div>
</section>
<section class="types-of-pecans">
   <h2 class="text-center mb-5">Types of pecans</h2>
   <div class="types-of-pecans-desktop">
      <div class="two-sec-bg position-relative">
         <div class="container-fluid">
            <div class="row align-items-center">
               <div class="col-lg-6 p-0">
                  <img src="{{section.settings.pecan1_img | img_url:''}}" class="img-fluid">
               </div>
               <div class="col-lg-6 cten p-0">
                  <div class="ctent-wrap text-center">
                     <h3>{{section.settings.pecan1_title}}</h3>
                     <p>{{section.settings.pecan1_desc}}</p>
                  </div>
               </div>
            </div>
            <div class="row align-items-center">
               <div class="col-lg-6 cten p-0">
                  <div class="ctent-wrap text-center">
                     <h3>{{section.settings.pecan2_title}}</h3>
                     <p>{{section.settings.pecan2_desc}}</p>
                  </div>
               </div>
               <div class="col-lg-6 p-0">
                  <img src="{{section.settings.pecan2_img | img_url:''}}" class="img-fluid" alt="">
               </div>
            </div>
            <div class="row align-items-center">
               <div class="col-lg-6 p-0">
                  <img src="{{section.settings.pecan3_img | img_url:''}}" class="img-fluid" alt="">
               </div>
               <div class="col-lg-6 cten p-0">
                  <div class="ctent-wrap text-center">
                     <h3>{{section.settings.pecan3_title}}</h3>
                     <p>{{section.settings.pecan3_desc}}</p>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   <div class="types-of-pecans-mobile">
      <div class="two-sec-bg position-relative">
         <div class="container-fluid">
            <div class="row align-items-center">
               <div class="col-lg-6 p-0">
                  <img src="{{section.settings.pecan1_img | img_url:''}}" class="img-fluid" alt="">
               </div>
               <div class="col-lg-6 cten p-0">
                  <div class="ctent-wrap text-center">
                     <h3>{{section.settings.pecan1_title}}</h3>
                     <p>{{section.settings.pecan1_desc}}</p>
                  </div>
               </div>
            </div>
            <div class="row align-items-center">
               <div class="col-lg-6 p-0">
                  <img src="{{section.settings.pecan2_img | img_url:''}}" class="img-fluid" alt="">
               </div>
               <div class="col-lg-6 cten p-0">
                  <div class="ctent-wrap text-center">
                     <h3>{{section.settings.pecan2_title}}</h3>
                     <p>{{section.settings.pecan2_desc}}</p>
                  </div>
               </div>
            </div>
            <div class="row align-items-center">
               <div class="col-lg-6 p-0">
                  <img src="{{section.settings.pecan3_img | img_url:''}}" class="img-fluid" alt="">
               </div>
               <div class="col-lg-6 cten p-0">
                  <div class="ctent-wrap text-center">
                     <h3>{{section.settings.pecan3_title}}</h3>
                     <p>{{section.settings.pecan3_desc}}</p>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
{% if section.settings.overlay_background == true %}
  <style type="text/css">
    .header-wbg:after {
       content: '';
       background-color: #00000040;
       position: absolute;
       width: 100%;
       height: 100%;
       left: 0;
       top: 0;
       z-index: 1;
     }
  </style>

{% endif %}
<style type="text/css">
   .visible-hide {
      visibility: hidden;
   }
   body .vidyard-player-container {
      float: right;
      max-width: 600px;
      margin-left: 20px !important;
      margin-bottom: 30px !important;
   }
   @media only screen and (max-width: 1199px) {
      body .vidyard-player-container {
        max-width: 500px;
      }
    }
    @media only screen and (max-width: 900px) {
      body .vidyard-player-container {
        max-width: 100%;
      }
    }
</style>


<script type="text/javascript">
  $( window ).load(function() {
    $('body').find('.main-section.plain-layout').removeClass('visible-hide');
  });
</script>

