<section >
  <div class="container">
    <div class="text-center">
      <div class="intro-content">
        <h1>{{ section.settings.main_hero_text }}</h1>
        <p>{{ section.settings.main_hero_decription }}</p>

        <div class="form-group">
      
          <div class="cta">
            <a href="{{ section.settings.main_hero_cta_link }}" class="btn">{{ section.settings.main_hero_cta_text }}</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
"name": "Benefits intro",
"settings": [

{
"type": "textarea",
"id": "main_hero_text",
"label": "Hero Heading"
},
{
"type": "textarea",
"id": "main_hero_decription",
"label": "Hero Sub heading"
},
{
"type":      "header",
"content":   "CTA"
},
{
"type": "text",
"id": "main_hero_cta_text",
"label": "CTA TEXT"
},
{
"type": "url",
"id": "main_hero_cta_link",
"label": "CTA LINK"
}
]
}
{% endschema %}
