{%- if section.settings.show_product_recommendations -%}
  {% assign page_handle = product.handle %}
  {% for block in section.blocks %}
    {% if block.settings.product_handle1 == page_handle %}   
      <section class="product-recommendation-wrap four-col-prod cus">
        <div class="product-inner-wrap">
          <div class="container">
            {%- if section.settings.heading != blank -%}
              <h2>{{ section.settings.heading | escape }}</h2>
            {%- endif -%}
            <div class="row justify-content-center">
              {% assign count = 0 %}
              {% for product in collections.all.products %}
                {% if block.settings.product_handle2 == product.handle or block.settings.product_handle3 == product.handle or block.settings.product_handle4 == product.handle or block.settings.product_handle5 == product.handle %}
                {% assign count = count | plus: 1 %}
                  <div class="col-sm-6 col-lg-3">
                    {% include 'product-tile-item-custom' %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        {% capture get_prev_record %}
            {{block.settings.product_handle1}}
        {% endcapture %}
      </section>
    {% endif %}
  {% endfor %}

    {% if get_prev_record == blank %}
                
        {% assign collection_handle = product.vendor | handleize %}
        {% assign prod_title = product.title %}
          <section class="product-recommendation-wrap four-col-prod def">
          <div class="product-inner-wrap">
            <div class="container">
              {%- if section.settings.heading != blank -%}
                <h2>{{ section.settings.heading | escape }}</h2>
              {%- endif -%}
              <div class="row justify-content-center">
                {% assign count = 0 %}
                {% for product in collections[collection_handle].products limit:4 %}
                {% assign count = count | plus: 1 %}
                {% if product.title != prod_title %}
                  <div class="col-sm-6 col-lg-3 align-self-end">
                    {% include 'product-tile-item-custom' %}
                  </div>
                {% endif %}
             
                {% endfor %}
              </div>
            </div>
          </div>
          
        </section>

    {% endif %}

{%- endif -%}

